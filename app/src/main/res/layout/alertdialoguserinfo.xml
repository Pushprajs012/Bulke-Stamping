<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backdialog"
    android:id="@+id/alertlayout"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="आप पहली बार रजिस्टर कर रहे है"
        android:textSize="30dp"
        android:id="@+id/tv1"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="कृपया अपनी जरूरी जानकारी दर्ज करे"
        android:layout_marginStart="15dp"
        android:id="@+id/tv2"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
    android:textSize="20dp"
    android:textStyle="bold"
        android:layout_marginTop="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv1" />

    <Button
        android:id="@+id/alersubmitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/fortwxt"
        android:text="यहाँ किलिक करे"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2" />


</androidx.constraintlayout.widget.ConstraintLayout>